{
  "name": "bookshelf-nest-api",
  "private": "true",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "run-s -cn lint:*",
    "lint:eslint": "eslint . --ext .js,.ts",
    "lint:prettier": "prettier --check *.{json,yml,yaml,md}",
    "fmt": "run-s -cn fmt:*",
    "fmt:eslint": "yarn lint:eslint --fix",
    "fmt:prettier": "yarn lint:prettier --write",
    "test": "jest",
    "test:watch": "jest --watch --runInBand",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand --detectOpenHandles"
  },
  "engines": {
    "node": "12.x",
    "yarn": "1.x"
  },
  "dependencies": {
    "@nestjs/common": "7.4.4",
    "@nestjs/config": "0.5.0",
    "@nestjs/core": "7.4.4",
    "@nestjs/graphql": "7.6.0",
    "@nestjs/mongoose": "7.0.2",
    "@nestjs/platform-express": "7.4.4",
    "apollo-server-express": "2.17.0",
    "beautify-isbn": "2.2.0",
    "class-transformer": "0.3.1",
    "class-validator": "0.12.2",
    "graphql": "15.3.0",
    "graphql-scalars": "1.2.7",
    "mongodb-uri": "0.9.7",
    "mongoose": "5.10.6",
    "mongoose-paginate-v2": "1.3.9",
    "reflect-metadata": "0.1.13",
    "rxjs": "6.6.3"
  },
  "devDependencies": {
    "@arkweid/lefthook": "0.7.2",
    "@commitlint/cli": "9.1.2",
    "@commitlint/config-conventional": "10.0.0",
    "@nestjs/cli": "7.5.1",
    "@nestjs/schematics": "7.1.2",
    "@nestjs/testing": "7.4.4",
    "@shopify/eslint-plugin": "38.0.0",
    "@shopify/prettier-config": "1.1.1",
    "@types/express": "4.17.8",
    "@types/faker": "4.1.12",
    "@types/jest": "26.0.14",
    "@types/mongoose": "5.7.36",
    "@types/mongoose-paginate-v2": "1.3.8",
    "@types/node": "14.11.2",
    "@types/supertest": "2.0.10",
    "eslint": "7.8.1",
    "faker": "5.1.0",
    "jest": "26.4.2",
    "jest-junit": "11.1.0",
    "mongodb-memory-server": "6.6.9",
    "npm-run-all": "4.1.5",
    "prettier": "2.1.2",
    "rimraf": "3.0.2",
    "supertest": "4.0.2",
    "ts-jest": "26.3.0",
    "ts-loader": "8.0.4",
    "ts-node": "9.0.0",
    "tsconfig-paths": "3.9.0",
    "typescript": "4.0.3"
  }
}
